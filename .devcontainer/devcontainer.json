{
  "name": "OpenClaw VPS Automation",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  // Codespaces専用の拡張機能設定（設定同期より優先される）
  "customizations": {
    "vscode": {
      "extensions": [
        // Codex 5.3対応バージョンを固定
        "openai.chatgpt@0.4.60"
      ],
      "settings": {
        // 拡張機能の自動更新を無効化（重要！）
        "extensions.autoUpdate": false,
        "extensions.autoCheckUpdates": false
      }
    }
  },
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  // Codespacesのポートフォワーディング
  "forwardPorts": [3000, 5432, 5678, 8080],
  
  // Codespaces起動時のコマンド
  "postCreateCommand": "echo 'Codespace ready with Codex 5.3 support!'",
  
  "remoteUser": "root"
}
