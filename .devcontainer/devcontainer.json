{
  "name": "OpenClaw VPS Automation",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  // Codespaces専用の拡張機能設定（設定同期より優先される）
  "customizations": {
    "vscode": {
      "extensions": [
        // 最新バージョン（GPT-5.3対応）
        "openai.chatgpt"
      ],
      "settings": {
        // OpenAI ChatGPT設定
        "chatgpt.gpt3.modelName": "gpt-5.3-turbo",
        "chatgpt.gpt3.maxTokens": 4096,
        "chatgpt.gpt3.temperature": 0.7,
        "chatgpt.gpt3.apiKey": "${env:OPENAI_API_KEY}",
        
        // 拡張機能の自動更新を有効化（最新機能を取得）
        "extensions.autoUpdate": true,
        "extensions.autoCheckUpdates": true
      }
    }
  },
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  // Codespacesのポートフォワーディング
  "forwardPorts": [3000, 5432, 5678, 8080],
  
  // Codespaces起動時のコマンド
  "postCreateCommand": "echo 'Codespace ready with Codex 5.3 support!'",
  
  "remoteUser": "root"
}
