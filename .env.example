# ============================================
# OpenClaw VPS + Docker環境変数設定
# ============================================

# --- Database Configuration ---
POSTGRES_USER=openclaw
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=openclaw

# --- LLM Provider Settings ---
# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ZhipuAI GLM-4 (コスパ重視の場合)
ZHIPUAI_API_KEY=your_zhipuai_api_key_here

# OpenAI (OpenNotebook用)
OPENAI_API_KEY=your_openai_api_key_here

# デフォルトのLLMプロバイダー
MODEL_PROVIDER=anthropic
MODEL_NAME=claude-sonnet-4

# --- Telegram Bot Settings ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# --- N8N Configuration ---
N8N_USER=admin
N8N_PASSWORD=changeme_n8n_password

# --- OpenNotebook Configuration ---
OPENNOTEBOOK_API_KEY=your_opennotebook_api_key_here

# --- Security Settings ---
# これらは変更不要（ローカルホストのみアクセス可）
ALLOWED_HOSTS=localhost,127.0.0.1

