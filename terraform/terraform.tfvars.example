# ==============================================================================
# Terraform Variables Example
# ==============================================================================
#
# このファイルをコピーして使用:
#   cp terraform.tfvars.example terraform.tfvars
#
# terraform.tfvars ファイルには機密情報が含まれるため、Gitにコミットしないでください
#
# ==============================================================================

# ------------------------------------------------------------------------------
# General Configuration
# ------------------------------------------------------------------------------

environment  = "production" # development, staging, production
project_name = "openclaw-vps"

# ------------------------------------------------------------------------------
# AWS Configuration
# ------------------------------------------------------------------------------

aws_region         = "ap-northeast-1" # 東京リージョン
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# ------------------------------------------------------------------------------
# EC2 Instance Configuration
# ------------------------------------------------------------------------------

instance_type     = "t3.small" # 推奨: t3.small (2 vCPU, 2GB RAM, ~$15/month)
# instance_type   = "t3.micro"  # 最小: t3.micro (2 vCPU, 1GB RAM, ~$7.5/month)
# instance_type   = "t3.medium" # より大きい: t3.medium (2 vCPU, 4GB RAM, ~$30/month)

ami_id           = "" # 空の場合は最新のUbuntu 22.04 LTSを自動選択
root_volume_size = 30 # GB

# ------------------------------------------------------------------------------
# Security Configuration
# ------------------------------------------------------------------------------

ssh_public_key_path = "~/.ssh/id_rsa.pub"

# SSH接続を許可するIPアドレス（CIDR形式）
# 本番環境では特定のIPアドレスに制限することを強く推奨します
allowed_ssh_ips = [
  "0.0.0.0/0", # 全てのIPを許可（開発環境のみ推奨）
  # "203.0.113.0/24", # 例: 自社オフィスのIP範囲
  # "198.51.100.42/32", # 例: 特定のIPアドレス
]

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------

# ドメイン名（必須）
domain_name = "your-domain.com"

# Anthropic API キー（必須）
anthropic_api_key = "sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# Telegram設定（オプション）
telegram_bot_token = "1234567890:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
telegram_chat_id   = "123456789"

# PostgreSQL パスワード（16文字以上を推奨）
postgres_password = "CHANGE_THIS_TO_STRONG_PASSWORD_16_CHARS_MIN"

# N8N 暗号化キー（32文字以上）
n8n_encryption_key = "CHANGE_THIS_TO_RANDOM_32_CHARACTERS_MIN"

# Grafana 管理者パスワード（12文字以上）
grafana_admin_password = "CHANGE_THIS_STRONG_PASSWORD"

# ------------------------------------------------------------------------------
# DNS Configuration (Optional)
# ------------------------------------------------------------------------------

# Route53を使用する場合は、ゾーンIDを指定
# route53_zone_id = "Z1234567890ABC"
route53_zone_id = ""

# ------------------------------------------------------------------------------
# Monitoring Configuration (Optional)
# ------------------------------------------------------------------------------

# CloudWatchアラートをSNS経由で通知する場合は、SNSトピックARNを指定
# sns_topic_arn = "arn:aws:sns:ap-northeast-1:123456789012:openclaw-alerts"
sns_topic_arn = ""

# ------------------------------------------------------------------------------
# Backup Configuration
# ------------------------------------------------------------------------------

# AWS Backupを有効化（推奨）
enable_aws_backup = true

# ------------------------------------------------------------------------------
# Tags (Optional)
# ------------------------------------------------------------------------------

additional_tags = {
  Owner       = "Your Name"
  CostCenter  = "Development"
  Compliance  = "GDPR"
  Environment = "Production"
}

# ==============================================================================
# セキュリティチェックリスト
# ==============================================================================
#
# デプロイ前に確認:
# [ ] 全てのパスワードが強力（16文字以上、大小英数字記号混在）
# [ ] allowed_ssh_ips が本番環境では特定のIPに制限されている
# [ ] domain_name が正しく設定されている
# [ ] APIキーが正しく設定されている
# [ ] terraform.tfvars ファイルが .gitignore に含まれている
#
# ==============================================================================

# ==============================================================================
# コスト見積もり (AWS 東京リージョン、2024年2月時点)
# ==============================================================================
#
# t3.small (推奨):
#   - EC2: ~$15/month
#   - EBS (30GB): ~$3/month
#   - Elastic IP: ~$3.65/month
#   - 合計: ~$22/month
#
# t3.micro (最小):
#   - EC2: ~$7.5/month
#   - EBS (30GB): ~$3/month
#   - Elastic IP: ~$3.65/month
#   - 合計: ~$14/month
#
# t3.medium (より大きい):
#   - EC2: ~$30/month
#   - EBS (30GB): ~$3/month
#   - Elastic IP: ~$3.65/month
#   - 合計: ~$37/month
#
# 追加コスト:
#   - AWS Backup: ~$5-10/month (データ量による)
#   - データ転送: 従量課金
#   - Route53 (オプション): ~$0.50/month
#
# ==============================================================================
